<body>
    <% if @book.errors.any? %>
        <div id="error_explanation">
            <h4><%= @book.errors.count %> error prohibited this book from being saved:</h4>
            <ul>
                <% @book.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
          <% end %>
        </div>

  <h1>Editing Book</h1>
  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <label>Title</label>
    <div class="field">
      <%= f.text_field :title %>
    </div>
    <label>Body</label>
    <div class="field">
      <%= f.text_area :body %>
    </div>
    <div class="submit">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
  <a><%= link_to"Show","/books/#{@book.id}" %></a> | <a><%= link_to"Back","/books" %></a>
</body>