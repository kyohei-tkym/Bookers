  <% if flash[:notice] %>
    <p id="notice">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <body>
    <h1>Bookers</h1>
    <table>
      <thhead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </thhead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show","/books/#{book.id}" %></td>
            <td><%= link_to "Edit","/books/#{book.id}/edit" %></td>
            <td><%= link_to "Destroy","/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
    <div class="form">
      <h2>New book</h2>

          <% if @book.errors.any? %>
        <div id="error_explanation">
            <h4><%= @book.errors.count %> error prohibited this book from being saved:</h4>
            <ul>
                <% @book.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
          <% end %>
        </div>

      <%= form_with model:@book, local:true do |f| %>

          <div class="field">
            <label>Title</label>
            <%= f.text_field :title %>
          </div>

          <div class="field">
            <label>Body</label>
            <%= f.text_area :body %>
          </div>

          <div class="submit">
            <%= f.submit 'Create Book' %>
          </div>
      <% end %>
    </div>
  </body>